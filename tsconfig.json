{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "**/*.tns.ts",
    "**/*.android.ts",
    "**/*.ios.ts"
  ],
  "baseUrl": ".",
  "paths": {
    "@src/*": [
      "src/*.android.ts",
      "src/*.ios.ts",
      "src/*.tns.ts",
      "src/*.web.ts",
      "src/*"
    ],
    "~/*": [
      "src/*"
    ]
  }
}